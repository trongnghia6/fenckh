    <script>
      function filterClasses() {
    let filterValue = document.getElementById("filterByDepartment").value;
    let table = document.getElementById("classTable");
    let tr = table.getElementsByTagName("tr");

    for (let i = 1; i < tr.length; i++) {
        let td = tr[i].getElementsByTagName("td")[1]; // Lấy mã giảng viên mời
        if (td) {
            let textValue = td.textContent || td.innerText;
            // Kiểm tra xem mã khoa có trong mã giảng viên mời không
            if (filterValue === "" || textValue.startsWith(filterValue)) {
                tr[i].style.display = ""; // Hiển thị hàng
            } else {
                tr[i].style.display = "none"; // Ẩn hàng
            }
        }
    }
    }
