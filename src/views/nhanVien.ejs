                  <% const options = { year: 'numeric', month: '2-digit', day: '2-digit' }; %>
                  <td><%= nhanvienLists[i].NgayCapCCCD ? new Date(nhanvienLists[i].NgayCapCCCD).toLocaleDateString('vi-VN', options) : '' %></td>
                  <td><%= nhanvienLists[i].NoiCapCCCD %></td>
