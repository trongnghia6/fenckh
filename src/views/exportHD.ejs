      function hideButton() {
        const isKhoa = localStorage.getItem("isKhoa");
        if (isKhoa === null) {
          console.log('Không tìm thấy giá trị isKhoa trong localStorage');
        } else {
          console.log('Giá trị isKhoa: ', isKhoa);

