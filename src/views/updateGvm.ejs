                      <div class="w-80">
                        <div class="m-3">
                             <form action="/updateGvm" method="POST" class="form d-flex flex-column" enctype="multipart/form-data">
                                <!-- //enctype="multipart/form-data" -->
                                <fieldset>
                                    <div style="display: none;">
                                        <a>Id:<input class="input" type="text" name="IdGvm" id="IdGvm" value="<%= value.id_Gvm %>"></a>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="HoTen">Họ tên:</label>
                                            <input required class="form-control" type="text" name="HoTen" id="HoTen" value="<%= value.HoTen %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="gioitinh">Giới tính:</label>
                                            <select class="form-control" name="GioiTinh" id="gioitinh">
                                                <option value="Nam" <%= value.GioiTinh === 'Nam' ? 'selected' : '' %>>Nam</option>
                                                <option value="Nu" <%= value.GioiTinh === 'Nu' ? 'selected' : '' %>>Nữ</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="ngaySinh">Ngày sinh:</label>
                                            <input required class="form-control" type="date" name="NgaySinh" id="ngaySinh" value="<%= new Date(value.NgaySinh).toISOString().split('T')[0] %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="CCCD">CCCD:</label>
                                            <input required class="form-control" type="text" name="CCCD" id="CCCD" value="<%= value.CCCD %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="NgayCapCCCD">Ngày cấp CCCD:</label>
                                            <input required class="form-control" type="date" name="NgayCapCCCD" id="NgayCapCCCD" value="<%= new Date(value.NgayCapCCCD).toISOString().split('T')[0] %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="NoiCapCCCD">Nơi cấp CCCD:</label>
                                            <input required class="form-control" type="text" name="NoiCapCCCD" id="NoiCapCCCD" value="<%= value.NoiCapCCCD %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="NoiCongTac">Nơi công tác:</label>
                                            <input required class="form-control" type="text" name="NoiCongTac" id="NoiCongTac" value="<%= value.NoiCongTac %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="DiaChi">Địa chỉ theo CCCD:</label>
                                            <input required class="form-control" type="text" name="DiaChi" id="DiaChi" value="<%= value.DiaChi %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="dienThoai">Điện thoại:</label>
                                            <input required class="form-control" type="text" name="DienThoai" id="dienThoai" value="<%= value.DienThoai %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="email">Email:</label>
                                            <input required class="form-control" type="email" name="email" id="email" value="<%= value.Email %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="msthue">Mã số thuế:</label>
                                            <input required class="form-control" type="text" name="MaSoThue" id="msthue" value="<%= value.MaSoThue %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="hocVi">Học vị:</label>
                                            <input required class="form-control" type="text" name="HocVi" id="hocVi" value="<%= value.HocVi %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="chucvu">Chức vụ:</label>
                                            <input required class="form-control" type="text" name="ChucVu" id="chucvu" value="<%= value.ChucVu %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="hsl">Hệ số lương:</label>
                                            <input required class="form-control" type="text" name="HeSoLuong" id="hsl" value="<%= value.HSL %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="stk">Số tài khoản:</label>
                                            <input required class="form-control" type="text" name="STK" id="stk" value="<%= value.STK %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="nganHang">Ngân hàng:</label>
                                            <input required class="form-control" type="text" name="NganHang" id="nganHang" value="<%= value.NganHang %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label for="BangTotNghiepLoai">Bằng tốt nghiệp loại:</label>
                                            <input required class="form-control" type="text" name="BangTotNghiepLoai" id="BangTotNghiepLoai" value="<%= value.BangTotNghiepLoai %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label>Mặt trước CCCD:</label>
                                            <img src="/images/userIdCardPhotos/frontPhotos/<%= value.MatTruocCCCD %>" alt="Mặt trước CCCD" width="100">
                                            <br>
                                            <input class="form-control" type="file" name="truocCCCD">
                                            <input type="hidden" name="oldTruocCCCD" value="<%= value.MatTruocCCCD %>">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Mặt sau CCCD:</label>
                                            <img src="/images/userIdCardPhotos/frontPhotos/<%= value.MatSauCCCD %>" alt="Mặt sau CCCD" width="100">
                                            <br>
                                            <input class="form-control" type="file" name="sauCCCD" id="sauCCCD">
                                            <input type="hidden" name="oldSauCCCD" value="<%= value.MatSauCCCD %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label>File lý lịch (PDF):</label> <%= value.FileLyLich %>   
                                            <input class="form-control" type="file" name="FileLyLich" id="FileLyLich">
                                            <input type="hidden" name="oldFileLyLich" value="<%= value.FileLyLich %>">
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <p>Mã phòng ban:</p>
                                            <label>
                                                <input class="m-2" type="checkbox" name="maPhongBan" value="CNTT" <%= value.MaPhongBan.includes('CNTT') ? 'checked' : '' %> > CNTT
                                            </label>
                                            <label>
                                                <input class="m-2" type="checkbox" name="maPhongBan" value="ATTT" <%= value.MaPhongBan.includes('ATTT') ? 'checked' : '' %> > ATTT
                                            </label>
                                            <label>
                                                <input class="m-2" type="checkbox" name="maPhongBan" value="DTVT" <%= value.MaPhongBan.includes('DTVT') ? 'checked' : '' %> > DTVT
                                            </label>
                                        </div>
                                    </div>
                                
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <label for="tinhTrang">Tình trạng giảng dạy:</label>
                                            <select class="form-control" name="tinhTrangGiangDay" id="tinhTrang">
                                                <option value="true" <%= value.TinhTrangGiangDay === true ? 'selected' : '' %>>Đang giảng dạy</option>
                                                <option value="false" <%= value.TinhTrangGiangDay === false ? 'selected' : '' %>>Đã ngừng giảng dạy</option>
                                            </select>
                                        </div>
                                    </div>
                                
                                    <button class="btn btn-success" id="submit" style="width: 100px;">Submit</button>
                                </fieldset>
                                
                            </form>                          
                        </div>
                    </div>
                    </div>
                </div>
                
            </div>    
     </div>
