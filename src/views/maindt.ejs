  </nav>


  <!-- 2. Tổng quan -->
  <div class="container my-4 mg-top">
    <div class="row">
      <div class="col-lg-4 col-md-6">
        <div class="card text-white bg-primary mb-3">
          <div class="card-body">
            <h5 class="card-title">Tổng số học viên</h5>
            <p class="card-text">200 Học viên</p>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6">
        <div class="card text-white bg-success mb-3">
          <div class="card-body">
            <h5 class="card-title">Môn học đang hoạt động</h5>
            <p class="card-text">15 Môn học</p>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-6">
        <div class="card text-white bg-warning mb-3">
          <div class="card-body">
            <h5 class="card-title">Giảng viên</h5>
            <p class="card-text">30 Giảng viên</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 3. Danh sách Môn học -->
  <div class="container my-4">
    <h3>Danh sách Môn học</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Tên Môn học</th>
          <th>Thời gian</th>
          <th>Giảng viên phụ trách</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td>Môn học Lập trình Web</td>
          <td>3 tháng</td>
          <td>Nguyễn Văn A</td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Môn học Lập trình Python</td>
          <td>2 tháng</td>
          <td>Trần Văn B</td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- 4. Danh sách học viên -->
  <div class="container my-4">
    <h3>Danh sách học viên</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Tên học viên</th>
          <th>Môn học</th>
          <th>Tiến độ</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td>Nguyễn Văn C</td>
          <td>Lập trình Web</td>
          <td>70%</td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Trần Thị D</td>
          <td>Lập trình Python</td>
          <td>50%</td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- 5. Danh sách Giảng viên -->
  <div class="container my-4">
    <h3>Danh sách Giảng viên</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Tên Giảng viên</th>
          <th>Số Môn học phụ trách</th>
          <th>Tổng số giờ dạy</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td>Nguyễn Văn A</td>
          <td>5</td>
          <td>150 giờ</td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Trần Văn B</td>
          <td>3</td>
          <td>100 giờ</td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- 6. Lịch học -->
  <div class="container my-4">
    <h3>Lịch học</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Ngày</th>
          <th>Môn học</th>
          <th>Giờ học</th>
          <th>Phòng</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>15/10/2024</td>
          <td>Lập trình Web</td>
          <td>8:00 - 10:00</td>
          <td>Phòng 101</td>
        </tr>
        <tr>
          <td>16/10/2024</td>
          <td>Lập trình Python</td>
          <td>10:00 - 12:00</td>
          <td>Phòng 102</td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- 7. Báo cáo và thống kê -->
  <div class="container my-4">
    <h3>Báo cáo và thống kê</h3>
    <div class="row">
      <div class="col-lg-6">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">Số lượng học viên theo từng tháng</h5>
            <canvas id="studentChart"></canvas>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">Tỷ lệ hoàn thành Môn học</h5>
            <canvas id="completionChart"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // 7. Báo cáo và thống kê - Vẽ biểu đồ (Sử dụng Chart.js)
    var ctx1 = document.getElementById('studentChart').getContext('2d');
    var studentChart = new Chart(ctx1, {
      type: 'line',
      data: {
        labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4'],
        datasets: [{
          label: 'Học viên',
          data: [50, 100, 150, 200],
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 1
        }]
      }
    });

    var ctx2 = document.getElementById('completionChart').getContext('2d');
    var completionChart = new Chart(ctx2, {
      type: 'pie',
      data: {
        labels: ['Hoàn thành', 'Chưa hoàn thành'],
        datasets: [{
          data: [75, 25],
          backgroundColor: ['rgba(75, 192, 192, 1)', 'rgba(255, 99, 132, 1)'],
          borderWidth: 1
        }]
      }
    });
  </script>
  <!-- 8. Chữ mờ và nút quay về đầu trang -->
  <div class="container my-4">
    <footer class="text-center">
      <p class="text-muted">© 2024 Phòng Đào Tạo. Tất cả các quyền được bảo lưu.</p>
      <button onclick="topFunction()" id="backToTopBtn" class="btn btn-secondary">Quay về đầu trang</button>
    </footer>
  </div>

  <script>
    // Nút quay về đầu trang
    var backToTopBtn = document.getElementById("backToTopBtn");

    // Khi nhấn vào nút, cuộn về đầu trang
    function topFunction() {
      document.body.scrollTop = 0; // Cho Safari
      document.documentElement.scrollTop = 0; // Cho Chrome, Firefox, IE và Opera
    }
  </script>
