            <% if (accountLists && accountLists.length > 0) { %>
              <% for (var i = 0; i < accountLists.length; i++) { %>
                <tr class="taiKhoan">
                  <td><%= i+1 %></td> <!-- Số thứ tự -->
                  <td><%= accountLists[i].id_User %></td> <!-- Hiển thị tên tài khoản -->
                  <td><%= accountLists[i].TenNhanVien %></td>
                  <td><%= accountLists[i].TenDangNhap %></td> <!-- Hiển thị email -->
