      function searchTK() {
        let input = document.getElementById("searchTK").value.toLowerCase();
        let table = document.getElementById("taiKhoanTable");
        let rows = table.getElementsByTagName("tr");
    
        let currentGroup = null;
        let groupVisible = false;
    
