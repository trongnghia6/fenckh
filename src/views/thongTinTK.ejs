        }
    
        // Xử lý nhóm cuối cùng
        if (currentGroup) {
          setGroupVisibility(currentGroup, groupVisible);
        }
      }
    
      function setGroupVisibility(group, visible) {
        group.forEach(row => {
          row.style.display = visible ? "" : "none";
        });
      }
    </script>        
