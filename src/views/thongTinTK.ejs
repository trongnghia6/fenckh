          </thead>
          <tbody>
            <% if (accountLists && accountLists.length > 0) { %>
              <% for (var i = 0; i < accountLists.length; i++) { %>
                <tr>
                  <td><%= i+1 %></td> <!-- Số thứ tự -->
                  <td><%= accountLists[i].id_User %></td> <!-- Hiển thị tên tài khoản -->
                  <td><%= accountLists[i].TenDangNhap %></td> <!-- Hiển thị email -->
                  <td><%= accountLists[i].matkhau %></td>
                  <td><%= accountLists[i].MaPhongBan %></td>
                  <td><%= accountLists[i].Quyen %></td>
                  <td><%= accountLists[i].isKhoa %></td>
                  <td class="d-flex" style="border: none;">
                    <button class="action-button edit"
                        onclick="editTK(this, '<%=(accountLists[i].TenDangNhap)%>')">
                        ✏️
                      </button>
                  </td>
                </tr>
              <% } %>
            <% } else { %>
              <tr>
                <td colspan="3">Không có tài khoản nào.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
